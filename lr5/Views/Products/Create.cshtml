@model Product
@{
    ViewData["Title"] = "Add some data boi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">New Product</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Product Name</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="ProductName" />
                                <span class="text-danger" asp-validation-for="ProductName"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Product Brand</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="ProductBrand" />
                                <span class="text-danger" asp-validation-for="ProductBrand"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Product Price</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" step="0.01" asp-for="ProductPrice" />
                                <span class="text-danger" asp-validation-for="ProductPrice"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Processor Frequency</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" step="0.01" asp-for="ProcessorFrequency" />
                                <span class="text-danger" asp-validation-for="ProcessorFrequency"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">RAM Size</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" step="0.01" asp-for="RamSize" />
                                <span class="text-danger" asp-validation-for="RamSize"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Storage Size</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" step="0.01" asp-for="StorageSize" />
                                <span class="text-danger" asp-validation-for="StorageSize"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Category</label>
                            <div class="col-sm-8">
                                <select class="form-control" asp-for="category_id">
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.category_id">@category.category_name</option>
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="category_id"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-auto">
                                <input class="btn btn-primary" type="submit" value="Submit" />
                            </div>
                            <div class="col-auto">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>