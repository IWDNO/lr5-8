@model Category

@{
    ViewData["Title"] = "delete me boi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Delete Category</h2>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Category Id</th>
                            <td>@Model.category_id</td>
                        </tr>
                        <tr>
                            <th>Category Name</th>
                            <td>@Model.category_name</td>
                        </tr>                        
                        <tr>
                            <th>Category Descripton</th>
                            <td>@Model.category_desc</td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-auto">
                            <form asp-controller="Categories" asp-action="DeleteProduct" asp-route-id="@Model.category_id" asp method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>